<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/non_tech"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#78909C"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/non_tech_relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_event1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#2d2a2a"
                android:textStyle="bold"
                android:typeface="sans" />


            <ImageView
                android:id="@+id/event1_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_event1"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:fitsSystemWindows="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/info_event1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event1_view"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:textColor="#2d2a2a"
                android:textSize="17sp"
                android:typeface="sans" />

            <Button
                android:id="@+id/b_event1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/info_event1"
                android:text="Notify" />

            <TextView
                android:id="@+id/tv_event2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/b_event1"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#2d2a2a"
                android:textStyle="bold"
                android:typeface="sans" />

            <ImageView
                android:id="@+id/event2_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_event2"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:fitsSystemWindows="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/info_event2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event2_view"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:textColor="#2d2a2a"
                android:textSize="17sp"
                android:typeface="sans" />

            <Button
                android:id="@+id/b_event2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/info_event2"
                android:text="Notify" />

            <TextView
                android:id="@+id/tv_event3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/b_event2"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#2d2a2a"
                android:textStyle="bold"
                android:typeface="sans" />

            <ImageView
                android:id="@+id/event3_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_event3"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:fitsSystemWindows="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/info_event3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event3_view"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:textColor="#2d2a2a"
                android:textSize="17sp"
                android:typeface="sans" />

            <Button
                android:id="@+id/b_event3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/info_event3"
                android:text="Notify" />
        </RelativeLayout>
    </ScrollView>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigation_menu"
        >

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>