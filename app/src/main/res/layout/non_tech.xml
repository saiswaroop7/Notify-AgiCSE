<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/non_tech"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/non_tech_relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_event5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@color/primaryTextColor"
                android:textStyle="bold"
                android:typeface="sans" />


            <ImageView
                android:id="@+id/event5_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_event5"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:fitsSystemWindows="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/info_event5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event5_view"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:textColor="@color/primaryTextColor"
                android:textSize="17sp"
                android:typeface="sans" />

            <Button
                android:id="@+id/b_event5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/info_event5"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_events"
                android:text="Notify" />

            <TextView
                android:id="@+id/tv_event6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/b_event5"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@color/primaryTextColor"
                android:textStyle="bold"
                android:typeface="sans" />

            <ImageView
                android:id="@+id/event6_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_event6"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:fitsSystemWindows="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/info_event6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event6_view"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:textColor="@color/primaryTextColor"
                android:textSize="17sp"
                android:typeface="sans" />

            <Button
                android:id="@+id/b_event6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/info_event6"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_events"
                android:text="Notify" />

            <TextView
                android:id="@+id/tv_event7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/b_event6"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@color/primaryTextColor"
                android:textStyle="bold"
                android:typeface="sans" />

            <ImageView
                android:id="@+id/event7_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_event7"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:fitsSystemWindows="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/info_event7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event7_view"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:textColor="@color/primaryTextColor"
                android:textSize="17sp"
                android:typeface="sans" />

            <Button
                android:id="@+id/b_event7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/info_event7"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_events"
                android:text="Notify" />

            <TextView
                android:id="@+id/tv_event8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/b_event7"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@color/primaryTextColor"
                android:textStyle="bold"
                android:typeface="sans" />

            <ImageView
                android:id="@+id/event8_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_event8"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:fitsSystemWindows="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/info_event8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event8_view"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:textColor="@color/primaryTextColor"
                android:textSize="17sp"
                android:typeface="sans" />

            <Button
                android:id="@+id/b_event8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/info_event8"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_events"
                android:text="Notify" />
        </RelativeLayout>
    </ScrollView>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigation_menu">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>