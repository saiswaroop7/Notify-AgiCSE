<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tech"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#78909C"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/tech_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

     <TextView
         android:id="@+id/tv_event1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:paddingTop="20dp"
         android:text="Ignite :"
         android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
         android:textColor="#2d2a2a" />
    <ImageButton
        android:id="@+id/event1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_event1"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:fitsSystemWindows="true"
        android:scaleType = "fitXY"
        android:src="@drawable/ignite_technical" />

        <TextView
            android:id="@+id/tv_event2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event1"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="Workshop On Photoshop :"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#2d2a2a" />

        <ImageButton
            android:id="@+id/event2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_event2"
            android:adjustViewBounds="true"
            android:scaleType = "fitXY"
            android:src="@drawable/photoshop" />

        <TextView
            android:id="@+id/tv_event3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event2"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="Electronique :"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#2d2a2a" />
        <ImageButton
            android:id="@+id/event3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_event3"
            android:adjustViewBounds="true"
            android:scaleType = "fitXY"
            android:src="@drawable/electronique" />
    </RelativeLayout>
    </ScrollView>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigation_menu">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>