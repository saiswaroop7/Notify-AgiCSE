<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_main</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_main</item>
        <item name="colorAccent">@color/colorAccent_main</item>
        <item name="windowActionBar">true</item>
    </style>
    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_main</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_main</item>
        <item name="colorAccent">@color/colorAccent_main</item>
        <item name="windowActionBar">true</item>
    </style>

    <style name="login" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_login</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_login</item>
        <item name="colorAccent">@color/colorAccent_login</item>
        <item name="windowActionBar">true</item>
    </style>
</resources>
